	<!-- 공지사항 목록 조회 -->
	<select id="noticeList" resultType="kr.kosmo.jobkorea.sss.model.NoticeKModel">
		
		SELECT	nt_seq, nt_title, nt_contents, nt_cnt, enr_user, enr_date,
			    upd_user, upd_date, file_nm, file_loc, file_size
		FROM	tb_notice
		ORDER BY nt_seq DESC
	</select>
	
	
	 
	 <!-- 공지사항 목록 총 갯수 조회 -->
	<select id="countListNotice" resultType="int">
		SELECT COUNT(*) AS tot_cnt FROM tb_notice
